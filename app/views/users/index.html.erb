
<h1>Current Users:</h1>

<ul>
	<% @users.each do |user| %>
		<li>Name: <%= user.name %></li>
		<li>Email: <%= user.email %></li>
		<li>Owner?: <%= user.owner %></li>
		<%= link_to "Edit User", edit_user_path(user) %> |
		<% if user != current_user  %>
			<%= link_to "Delete User", user_path(user), method: :delete %>
		<% end %>	
		<br>___________________________
	<% end %>
</ul>	
